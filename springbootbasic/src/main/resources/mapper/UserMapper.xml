<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.example.tobi.springbootbasic.mapper.UserMapper">

    <select id="findAll" resultType="org.example.tobi.springbootbasic.model.User">
        SELECT * FROM user;
    </select>

    <select id="findById" parameterType="long" resultType="org.example.tobi.springbootbasic.model.User">
        SELECT * FROM user WHERE id = #{id};
    </select>

    <insert id="insertUser" parameterType="org.example.tobi.springbootbasic.model.User">
        INSERT INTO user(name, email, userid, password) VALUES (#{name}, #{email}, #{userid}, #{password})
    </insert>

    <insert id="updateUser" parameterType="org.example.tobi.springbootbasic.model.User">
        INSERT INTO user(name, email,userid) VALUES (#{name}, #{email}, #{userid})
    </insert>

</mapper>