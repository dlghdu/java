<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.tobi.springbootsecurityhooyung.mapper.MemberMapper">

    <resultMap id="memberResultMap" type="org.example.tobi.springbootsecurityhooyung.model.Member">
        <result property="userId" column="user_id"/>
        <result property="password" column="password"/>
        <result property="userName" column="user_name"/>
    </resultMap>

    <insert id="signUp" parameterType="org.example.tobi.springbootsecurityhooyung.model.Member">
        INSERT INTO member (user_id, password, user_name)
        VALUES (#{userId}, #{password}, #{userName});
    </insert>

    <select id="Login"
            parameterType="String"
            resultMap="memberResultMap">
        SELECT * FROM member WHERE user_id = #{userId};
    </select>

</mapper>